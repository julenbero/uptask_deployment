doctype html
html(lang="en")
    head
        include partials/header
    body.login 
        .contenedor-formulario 
            h1 #{nombrePagina}
            p Coloca tu nuevo password

            form.caja-login(method="post")
                .campo 
                    label(for="password") Password: 
                    input(type="password", name="password" placeholder="Indica tu nuevo password")
                .campo.enviar
                    input.boton(type="submit", value="Restablecer Password")